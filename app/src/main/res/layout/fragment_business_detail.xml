<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.BusinessDetailFragment">
    <TextView
        android:id="@+id/tvBusinessCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Categories"
        android:layout_below="@+id/tvBusinessTitle"
        app:layout_constraintStart_toStartOf="@+id/tvBusinessTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvBusinessTitle" />

    <TextView
        android:id="@+id/tvBusinessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Business Title"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBusinessImage" />

    <TextView
        android:id="@+id/tvBusinessAddress"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="3dp"
        android:layout_below="@+id/tvBusinessCategories"
        android:fontFamily="@font/poppins_semibold"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBusinessCategories" />

    <TextView
        android:id="@+id/tvBusinessPriceRating"
        android:layout_below="@+id/tvBusinessTitle"
        android:layout_toEndOf="@+id/tvBusinessCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Price"
        app:layout_constraintStart_toEndOf="@+id/tvBusinessCategories"
        app:layout_constraintTop_toTopOf="@+id/tvBusinessCategories" />

    <ImageView
        android:id="@+id/ivBusinessImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvOpenStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open/Closed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toEndOf="@+id/tvBusinessPriceRating"
        app:layout_constraintTop_toTopOf="@+id/tvBusinessPriceRating" />

    <Button
        android:id="@+id/btnFavourite"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:text=""
        app:icon="@drawable/ic_baseline_favorite_border_24"
        app:iconGravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toEndOf="@+id/tvBusinessTitle"
        app:layout_constraintTop_toTopOf="@+id/tvBusinessTitle"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_x="41dp"
        android:layout_y="55dp"
        android:text="View Website"
        app:layout_constraintStart_toStartOf="@+id/tvBusinessAddress"
        app:layout_constraintTop_toBottomOf="@+id/tvBusinessAddress" />








</androidx.constraintlayout.widget.ConstraintLayout>


